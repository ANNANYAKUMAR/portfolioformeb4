class Lazer {
  //member variables
  int x, y, speed, rad;
  color c;

  Lazer(int x, int y) {
    this.x=x;
    this.y=y;
    speed = 10;
      r = 5;
      c = color;
  }

  //member methods
  void fire() {
    y -= speed;
  }
  boolean reachedTop() {
    if (y < - 5) {
      return true;
    } else {
      return false;
    }
  }


  void display() {
    fill(c);
    noStroke();
    rectMode(CENTER);
    rect(x, y, 3, 6);
    }
}
