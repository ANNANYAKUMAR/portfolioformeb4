class Lazer {
  //member variables
  int x, y, speed, rad, power;
  color c;

  Lazer(int x, int y) {
    this.x=x;
    this.y=y;
    speed = 10;
      rad = 5;
      power = int(random(20, 30));
    c = #FF0808;
  }

  //member methods
  void fire() {
    y-=speed;
  }
  boolean reachedTop() {
    if (y<-5) {
      return true;
    } else {
      return false;
    }
  }


  void display() {
    fill(c);
    noStroke();
    rectMode(CENTER);
    rect(x, y, 3, 6);
    ellipse(x, y, 2, 2);
  }
}
