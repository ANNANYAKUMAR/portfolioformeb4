class Star {
  //member variables
  int x, y, speed, dia;
  color c;

  Star(int x, int y) {
    this.x=x;
    this.y=y;
    speed = int(random(1, 9));
    dia = int(random(1, 4));
    c = 300;
  }
  boolean reachedBottom() {
    if (y > height) {
      return true;
    } else {
      return false;
    }
  }

  void move() {
    y+=speed;
  }

  //member methods
  void display() {
    fill(c);
    noStroke();
    ellipse(x, y, dia, dia);
  }
}
