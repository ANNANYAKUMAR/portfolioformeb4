class Asteroid {
  //member variables
  PImage asteroid;
  int x, y, health, dia, speed, rad;
  char displayMode;
  color c;

  //constructor
  Asteroid(int x, int y) {
    this.x = x;
    this.y = y;
    x=0;
    y=0;
    health = 50;
    dia = 50;
    speed = int(random(1, 9));
    rad = 25;
    displayMode = '1';
    c = #08FF43;
      asteroid = loadImage("asteroid.png");
  }

  //Collision for Asteroid and Lazers
  boolean asteroidIntersection(Lazer lazer) {
    float distance = dist(x, y, lazer.x, lazer.y);
    if (distance < rad+ lazer.rad) {
      return true;
    } else {
      return false;
    }
  }
  void move() {
    y+=speed;
  }

  //member methods
  void display() {
    fill(c);
    //ellipse(x, y, dia, dia);
    image(asteroid, x, y);
  }
}
